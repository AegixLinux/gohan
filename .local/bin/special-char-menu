#!/bin/sh

# Path to the special_chars file in barbs
CHAR_FILE="$HOME/.local/share/barbs/chars/special_chars"

# Prompt the user to select a character using dmenu
CHAR=$(cat "$CHAR_FILE" | dmenu -p "Select special character:")

# Once char is selected, copy it to the clipboard
if [ -n "$CHAR" ]; then
    echo -n "$CHAR" | xclip -selection clipboard
fi

chmod +x ~/.local/bin/special-char-menu
