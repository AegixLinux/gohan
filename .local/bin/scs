#!/bin/sh

# Ensure the script uses UTF-8 encoding
export LANG=en_US.UTF-8

# scs - Space Cryptographic Script

# Create an array of cute-themed ASCII art
space_art=(
    "à¬˜(à©­ËŠáµ•Ë‹)à©­* âœ©â€§â‚ŠË–âºâ€§â‚ŠËš â™¡ Ëšâ‚Šâ€§âºË–â‚ŠËšÊš á—¢â‚ŠËšâœ§"
